<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Today highlight (weâ€™ll set this programmatically with setBackgroundResource) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFF2CC"/> <!-- light yellow for today -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC"/>
            <corners android:radius="4dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Default day cell -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="#CCCCCC"/>
            <corners android:radius="4dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

</selector>
